<h1>New Goal</h1>

<form class="" action=" <%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Title
    <input type="text" name="goal[title]" value=" <%= @goal.title %>">
  </label>

  <label>Description
    <input type="text" name="goal[description]" value=" <%= @goal.description %>">
  </label>

  <label>
    Public
    <input type="radio" name="goal[privacy]" value="open">
  </label>

  <label>
    Private
    <input type="radio" name="goal[privacy]" value="closed">
  </label>

  <button>Submit</button>

</form>
