<h1>Request-a-cat!</h1>

<% @request.errors.full_messages.each do |m| %>
<%= m %>
<% end %>

<form action="<%= cat_rental_requests_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <option <%= "selected" unless @request.cat_id %>></option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>" <%= "selected" if cat.id == @request.cat_id %> ><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]"
    value="<%= @request.start_date %>">
  <br>

  <label for="end_date">End Date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]"
    value="<%= @request.end_date %>">

  <input type="submit" value="Submit Request">
</form>
