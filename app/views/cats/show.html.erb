<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Birthday</th>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <th>Color</th>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <th>Sex</th>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= @cat.description %></td>
  </tr>
</table>

<%= link_to "Edit this cat", edit_cat_url %>

<h2>Requests for <%= @cat.name %>:</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>
<% @cat.requests.order(:start_date).each do |request| %>
  <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
  </tr>
  <% end %>
</table>
